<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                norsys_package_manage.norsys_package_listing_data_source
            </item>
            <item name="deps" xsi:type="string">
                norsys_package_manage.norsys_package_listing_data_source
            </item>
        </item>
        <item name="spinner" xsi:type="string">spinner_columns</item>
    </argument>
    <dataSource name="norsys_package_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                Norsys\Package\Ui\Package\ManagePackageDataProvider
            </argument>
            <argument name="name" xsi:type="string">norsys_package_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">package_id</argument>
            <argument name="requestFieldName" xsi:type="string">package_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">package_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
        <exportButton name="export_button"/>
        <!--        <paging name="listing_paging"/>-->
    </listingToolbar>
    <columns name="spinner_columns">
        <column name="package_id" sortOrder="1">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Package Id</label>
            </settings>
        </column>
        <column name="package_status" class="Norsys\Package\Ui\Column\PackageProgress">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true">Package Delivery Progress</label>
            </settings>
        </column>
        <column name="receiverFullName">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Receiver Full Name</label>
            </settings>
        </column>
        <column name="city">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">City</label>
            </settings>
        </column>
        <column name="street">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Street</label>
            </settings>
        </column>
        <column name="weight">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Weight</label>
            </settings>
        </column>
        <column name="price">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Package Price (weight X 50dh)</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/text</bodyTmpl>
                <label translate="true">Package Status</label>
            </settings>
        </column>
        <column name="typePackage" class="Norsys\Package\Ui\Column\PackageType">
            <settings>
                <filter>text</filter>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true">Package Type</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Norsys\Package\Ui\Column\Actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">package_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
