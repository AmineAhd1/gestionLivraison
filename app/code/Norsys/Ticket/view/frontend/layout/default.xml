<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link" name="ticket.link"  before="-">
                <arguments>
                    <argument name="label" xsi:type="string">Add Ticket</argument>
                    <argument name="path" xsi:type="string">ticket/ticket/form</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
